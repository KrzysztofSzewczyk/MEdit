<project>

    <path id="build.classpath">
        <fileset dir="lib">
            <include name="**/*.jar"/>
            <include name="**/*.zip"/>
        </fileset>
    </path>
    
    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes">
            <classpath refid="build.classpath"/>
        </javac>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/MEdit.jar" basedir="build/classes">
            <zipgroupfileset dir="." includes="darcula.jar" /> 
            <manifest>
                <attribute name="Main-Class" value="medit.Start"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
       <java jar="build/jar/MEdit.jar" fork="true"/>
    </target>
    
</project>
