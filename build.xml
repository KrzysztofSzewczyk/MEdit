<project>
    
	<path id="blob"> 
	  <fileset dir=".">
	    <include name="blob/**/*.class"/>
	  </fileset>
	</path> 
	
    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes" classpathref="blob">
        </javac>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/MEdit.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="medit.Start"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
       <java jar="build/jar/MEdit.jar" fork="true"/>
    </target>
    
</project>
